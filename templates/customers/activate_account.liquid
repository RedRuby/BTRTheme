<div class="grid">
  <div class="grid-item large--one-half push--large--one-third1 small--one-whole">
    
    <div class="form-wrap text-center w3-card-2">

    <h1 class="text-dark-blue"><b>{{ 'customer.activate_account.title' | t }}</b></h1>
    <p class="text-dark-blue">{{ 'customer.activate_account.subtext' | t }}</p>

    {% form 'activate_customer_password' %}
      <div class="customer-form-item-wrapper">
        {% include 'form-errors-custom' %}

        <label for="customer_password" class="text-left text-dark-blue"><b>{{ 'customer.activate_account.password' | t }}</b></label>
        <input type="password" value="" name="customer[password]" id="customer_password">

        <label for="customer_password_confirmation" class="text-left text-dark-blue"><b>{{ 'customer.activate_account.password_confirm' | t }}</b></label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation">

        <div class="text-center">

            <p><input type="submit" class="btn" value="{{ 'customer.activate_account.submit' | t }}"></p>
            <p><input type="submit" class="btn-secondary" name="decline" id="customer_decline" value="{{ 'customer.activate_account.cancel' | t }}"></p>

        </div>
      </div>
    {% endform %}
      
    </div>

  </div>
</div>
