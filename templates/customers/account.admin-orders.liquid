  function ApplyDate() {
      var start_date = $("#start-date").val();
      var end_date = $("#end-date").val();
      start_unix = getUnix(start_date, 0);
      end_unix = getUnix(end_date, 1);
      if (start_date === "" || end_date === "") {
          alert("Please select start and end dates.");
